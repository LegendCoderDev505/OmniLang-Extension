{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "OmniLang",
  "patterns": [
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#comments" },
    { "include": "#numbers" },
    { "include": "#classes" },
    { "include": "#assignments" },
    { "include": "#dotcalls" }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.omnilang",
          "match": "\\b(if|else|elif|switch|case|default|return|for|while|loop|repeat|until|break|continue|and|or|not|in|is|Model|train|predict|Window|Label|Input|Button|onClick|onLoad|Route|Controller|View|method|Task|run|schedule|trigger|Function|DataStore|plugin|config|using|namespace|package|import|encrypt|decrypt|hash|sign|verify|auth|token|True|False|null)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.omnilang",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.omnilang",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.omnilang",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.omnilang",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.omnilang",
          "match": "#.*$"
        },
        {
          "name": "comment.block.omnilang",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.integer.omnilang",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.numeric.float.omnilang",
          "match": "\\b\\d+\\.\\d+\\b"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "entity.name.type.class.omnilang",
          "match": "\\b(Window|Label|Input|Button|Route|Controller|View|Task|Function|DataStore)\\b"
        }
      ]
    },
    "assignments": {
      "patterns": [
        {
          "name": "variable.other.assignment.omnilang",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\b(?=\\s*=)"
        }
      ]
    },
    "dotcalls": {
      "patterns": [
        {
          "name": "meta.method-call.omnilang",
          "match": "\\b([a-zA-Z_][\\w]*)\\.([a-zA-Z_][\\w]*):",
          "captures": {
            "1": { "name": "variable.other.object.omnilang" },
            "2": { "name": "entity.name.function.omnilang" }
          }
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.omnilang",
          "match": "[+\\-*/%=&|<>!?:]+"
        }
      ]
    }
  },
  "scopeName": "source.omnilang"
}